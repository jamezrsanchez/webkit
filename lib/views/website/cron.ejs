<h1>Cron</h1>
  
<p>Running cron jobs :</p>

<style>
#cronTable {
 margin-top: 20px; 
}
#cronTable th {
  padding: 5px 10px;
  background-color: #ddd;
  font-weight: bold;
  border: 1px solid #ccc;
}
#cronTable td {
  padding: 5px 10px;
  border: 1px solid #ccc;
}
</style>

<table id="cronTable">
  <thead>
  <tr>
    <th>Cron</th>
    <th>Name</th>
    <th>Params</th>
  </tr>
  </thead>
  <tbody>
  <% if(jobs.length > 0 ) { %>
    <% for(var i=0; i<jobs.length; i++) {%>
       <tr>
         <td><%= jobs[i].cron %></td>
         <td><%= jobs[i].name %></td>
         <td></td>
       </tr>
    <% } %>
  <% } else { %>
    <tr>
      <td colspan="3">
        You don't have any running jobs.
      </td>
    </tr>
  <% }%>
  </tbody>
</table>

